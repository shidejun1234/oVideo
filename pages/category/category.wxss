.category {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.category .item {
    position: relative;
    width: 49.4%;
}

.category .item .name {
    width: 200rpx;
    height: 100rpx;
    position: absolute;
    text-align: center;
    line-height: 100rpx;
    font-size: 40rpx;
    font-weight: bold;
    color: #fff;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    z-index: 2;
}

.category .f {
    width: 1.2%;
}

.category .item image {
    width: 100%;
    height: 350rpx;
}
