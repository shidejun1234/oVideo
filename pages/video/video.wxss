.bg{
    height: 100%;
    width: 100%;
    top: 0;
    bottom: 0;
    position: fixed;
    z-index: 1;
}

.bg image{
    height: 100%;
    width: 100%;
}

.body{
    height: 100%;
    width: 100%;
    position: absolute;
    z-index: 2;
    color: #ffffff;
}

.section{
    position: relative;
}

.section video{
    width: 100%
}

.section .is-wifi{
    width: 100%;
    font-size: 25rpx;
    text-align: center;
    position: absolute;
    top: 10%;
}

.section .desc{
    width: 90%;
    margin: 0 auto;
    padding: 20rpx;
    font-size: 25rpx;
}

.section .share{
    position: relative;
    display: flex;
    flex-direction: row;
    height: 50rpx;
    font-size: 25rpx;
    line-height: 50rpx;
    margin-right: 50rpx;
    float: right;
}

.section .share button{
    width: 100rpx;
    height: 50rpx;
    position: absolute;
    z-index: 99;
    border: 0;
}

.section .share image{
    width: 50rpx;
    height: 50rpx;
}

.video{
    width: 100%;
}

.video .item{
    position: relative;
    width: 100%;
    height: 160rpx;
    padding-bottom: 20rpx;
    font-size: 30rpx;
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
}

.video .item .card{
    width: 95%;
    height: 160rpx;
    margin: 20rpx auto;
    display: flex;
    flex-direction: row;
}

.video .item .card image{
    margin:0 auto;
    width: 35%;
    height: 160rpx;
}

.video .item .card .desc{
    display: flex;
    flex-direction: column;
    justify-content:center;
    width: 65%;
    height: 160rpx;
    padding-left: 20rpx;
    overflow: hidden;
}

.video .text-card{
    width: 100%;
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
}

.video .text-card text{
    display: block;
    margin: 20rpx;
}