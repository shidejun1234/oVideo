.body {
    height: 100%;
    width: 100%;
    position: absolute;
    z-index: 2;
}

.tab {
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    text-align: center;
    background: #fff;
}

.tab view {
    width: 30%;
    margin: 0 auto;
}

.tab .select {
    border-bottom: 3px solid #df5620;
}

.video {
    width: 100%;
    text-align: center;
}

.card {
    width: 100%;
    height: 480rpx;
    position: relative;
    color: #fff;
}

.card image {
    width: 100%;
    height: 480rpx;
}

.card .b {
    width: 100%;
    height: 480rpx;
    position: absolute;
    top: 0;
    background: #000;
    opacity: 0.5;
    z-index: 99;
}

.card .desc {
    width: 100%;
    height: 150rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    text-align: center;
    font-size: 30rpx;
    z-index: 99;
}

.card .desc .name {
    font-size: 45rpx;
    margin-bottom: 20rpx;
}
