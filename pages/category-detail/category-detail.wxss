page{
    background: #e5e5e5;
}

.head {
    width: 100%;
    position: relative;
    color: #fff;
}

.head image {
    width: 100%;
    height: 450rpx;
}

.head .desc {
    width: 100%;
    height: 150rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    text-align: center;
    font-size: 30rpx;
}

.head .desc .name {
    font-size: 45rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.video {
    width: 100%;
    text-align: center;
}

.video .item {
    position: relative;
    width: 95%;
    margin: 20rpx auto;
    padding: 35rpx 0;
    font-size: 30rpx;
    background: #fff;
}

.video .item image {
    margin: 0 auto;
    width: 90%;
    height: 350rpx;
}

.video .item .title {
    width: 95%;
    margin: 0 auto;
}

.video .item .time {
    position: absolute;
    top: 340rpx;
    left: 40rpx;
    width: 100rpx;
    color: #fff;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 10rpx;
}
